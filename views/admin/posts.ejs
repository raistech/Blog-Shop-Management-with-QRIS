<%- include('../partials/admin-header') %>

<div class="admin-layout">
    <%- include('../partials/admin-sidebar') %>
    
    <main class="admin-content">
        <div class="admin-page-header">
            <div style="display: flex; justify-content: space-between; align-items: center;">
                <div>
                    <h1><i class="fas fa-newspaper"></i> Blog Posts</h1>
                    <p>Manage your blog content</p>
                </div>
                <a href="/admin/blog/posts/create" class="btn btn-primary">
                    <i class="fas fa-plus"></i>
                    New Post
                </a>
            </div>
        </div>
        
        <!-- Success Message -->
        <script>
            const urlParams = new URLSearchParams(window.location.search);
            const successMsg = urlParams.get('success');
            if (successMsg && window.RSAStore && window.RSAStore.showNotification) {
                window.RSAStore.showNotification(successMsg, 'success');
                // Remove query param from URL
                window.history.replaceState({}, document.title, window.location.pathname);
            }
        </script>
        
        <% if (posts && posts.length > 0) { %>
            <div class="card">
                <table class="admin-table">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Author</th>
                            <th>Status</th>
                            <th>Views</th>
                            <th>Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% posts.forEach(post => { %>
                            <tr>
                                <td>
                                    <strong><%= post.title %></strong>
                                    <br>
                                    <small style="color: var(--text-muted);">/blog/<%= post.slug %></small>
                                </td>
                                <td><%= post.author_name || 'Unknown' %></td>
                                <td>
                                    <span class="status-badge <%= post.status %>">
                                        <% if (post.status === 'published') { %>
                                            <i class="fas fa-check"></i> Published
                                        <% } else { %>
                                            <i class="fas fa-clock"></i> Draft
                                        <% } %>
                                    </span>
                                </td>
                                <td><%= post.views %></td>
                                <td><%= formatDateWIB(post.created_at, { day: '2-digit', month: 'short', year: 'numeric' }) %></td>
                                <td>
                                    <div class="action-buttons">
                                        <a href="/blog/<%= post.slug %>" target="_blank" class="btn btn-secondary btn-sm" title="View">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="/admin/blog/posts/edit/<%= post.id %>" class="btn btn-primary btn-sm" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button onclick="deletePost(<%= post.id %>, '<%= post.title %>')" class="btn btn-danger btn-sm" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <div class="card" style="text-align: center; padding: 4rem 2rem;">
                <div style="font-size: 4rem; color: var(--text-muted); margin-bottom: 1rem;">
                    <i class="fas fa-newspaper"></i>
                </div>
                <h3>No Posts Yet</h3>
                <p style="color: var(--text-secondary); margin-bottom: 2rem;">
                    Create your first blog post to get started!
                </p>
                <a href="/admin/blog/posts/create" class="btn btn-primary">
                    <i class="fas fa-plus"></i>
                    Create First Post
                </a>
            </div>
        <% } %>
    </main>
</div>

<script>
    async function deletePost(postId, title) {
        if (!confirm(`Are you sure you want to delete "${title}"?`)) {
            return;
        }
        
        try {
            const formData = new FormData();
            formData.append('_csrf', '<%= csrfToken %>');
            
            const response = await fetch(`/admin/blog/posts/delete/${postId}`, {
                method: 'POST',
                body: formData
            });
            
            const data = await response.json();
            
            if (data.success) {
                RSAStore.showNotification('Post deleted successfully', 'success');
                setTimeout(() => window.location.reload(), 1000);
            } else {
                RSAStore.showNotification('Failed to delete post', 'error');
            }
        } catch (error) {
            RSAStore.showNotification('Error: ' + error.message, 'error');
        }
    }
</script>

</body>
</html>
