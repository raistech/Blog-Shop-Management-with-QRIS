<% const pageTitle = 'Contact Us'; %>
<%- include('partials/header') %>

<div class="container" style="margin-top: 3rem; margin-bottom: 4rem;">
    <div style="text-align: center; margin-bottom: 3rem;">
        <h1>Get In Touch</h1>
        <p style="color: var(--text-secondary); font-size: 1.125rem;">
            Kami siap membantu Anda. Jangan ragu untuk menghubungi kami!
        </p>
    </div>
    
    <div class="contact-grid" style="display: grid; grid-template-columns: 1fr 1fr; gap: 2rem; align-items: start;">
        <!-- Contact Info -->
        <div>
            <div class="card">
                <h3><i class="fas fa-info-circle"></i> Informasi Kontak</h3>
                
                <div style="margin-top: 1.5rem;">
                    <% if (settings.store_whatsapp) { %>
                        <a href="https://wa.me/<%= settings.store_whatsapp %>" target="_blank" style="display: flex; align-items: center; gap: 1rem; padding: 1.5rem; background: var(--bg-secondary); border-radius: var(--radius-lg); margin-bottom: 1rem; text-decoration: none; transition: all 0.3s ease; border: 1px solid var(--border-color);">
                            <div style="width: 50px; height: 50px; background: rgba(37, 211, 102, 0.1); border-radius: var(--radius-lg); display: flex; align-items: center; justify-content: center; font-size: 1.5rem; color: #25D366;">
                                <i class="fab fa-whatsapp"></i>
                            </div>
                            <div>
                                <h4 style="margin: 0 0 0.25rem 0; color: var(--text-primary);">WhatsApp</h4>
                                <p style="margin: 0; color: var(--text-muted); font-size: 0.875rem;">+<%= settings.store_whatsapp %></p>
                            </div>
                        </a>
                    <% } %>
                    
                    <% if (settings.store_telegram) { %>
                        <a href="https://t.me/<%= settings.store_telegram.replace('@', '') %>" target="_blank" style="display: flex; align-items: center; gap: 1rem; padding: 1.5rem; background: var(--bg-secondary); border-radius: var(--radius-lg); margin-bottom: 1rem; text-decoration: none; transition: all 0.3s ease; border: 1px solid var(--border-color);">
                            <div style="width: 50px; height: 50px; background: rgba(42, 171, 238, 0.1); border-radius: var(--radius-lg); display: flex; align-items: center; justify-content: center; font-size: 1.5rem; color: #2AABEE;">
                                <i class="fab fa-telegram"></i>
                            </div>
                            <div>
                                <h4 style="margin: 0 0 0.25rem 0; color: var(--text-primary);">Telegram</h4>
                                <p style="margin: 0; color: var(--text-muted); font-size: 0.875rem;"><%= settings.store_telegram %></p>
                            </div>
                        </a>
                    <% } %>
                    
                    <% if (settings.store_email) { %>
                        <a href="mailto:<%= settings.store_email %>" style="display: flex; align-items: center; gap: 1rem; padding: 1.5rem; background: var(--bg-secondary); border-radius: var(--radius-lg); margin-bottom: 1rem; text-decoration: none; transition: all 0.3s ease; border: 1px solid var(--border-color);">
                            <div style="width: 50px; height: 50px; background: rgba(102, 126, 234, 0.1); border-radius: var(--radius-lg); display: flex; align-items: center; justify-content: center; font-size: 1.5rem; color: var(--primary);">
                                <i class="fas fa-envelope"></i>
                            </div>
                            <div>
                                <h4 style="margin: 0 0 0.25rem 0; color: var(--text-primary);">Email</h4>
                                <p style="margin: 0; color: var(--text-muted); font-size: 0.875rem;"><%= settings.store_email %></p>
                            </div>
                        </a>
                    <% } %>
                </div>
            </div>
            
            <div class="card" style="margin-top: 2rem;">
                <h3><i class="fas fa-clock"></i> Jam Operasional</h3>
                <div style="margin-top: 1.5rem; color: var(--text-secondary);">
                    <% if (settings.operating_hours_weekday) { %>
                        <div style="padding: 0.75rem 0; border-bottom: 1px solid var(--border-color);">
                            <strong style="color: var(--text-primary);"><%= settings.operating_hours_weekday %></strong>
                        </div>
                    <% } %>
                    <% if (settings.operating_hours_weekend) { %>
                        <div style="padding: 0.75rem 0; border-bottom: 1px solid var(--border-color);">
                            <strong style="color: var(--text-primary);"><%= settings.operating_hours_weekend %></strong>
                        </div>
                    <% } %>
                    <% if (settings.operating_hours_support) { %>
                        <div style="padding: 0.75rem 0;">
                            <strong style="color: var(--success);"><%= settings.operating_hours_support %></strong>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
        
        <!-- Quick Links / FAQ -->
        <div>
            <div class="card">
                <h3><i class="fas fa-question-circle"></i> Frequently Asked Questions</h3>
                
                <div style="margin-top: 1.5rem;">
                    <% if (faqs && faqs.length > 0) { %>
                        <% faqs.forEach(faq => { %>
                            <details class="faq-item" style="margin-bottom: 1rem; padding: 1rem; background: var(--bg-secondary); border-radius: var(--radius-lg); cursor: pointer;">
                                <summary style="font-weight: 600; color: var(--text-primary); cursor: pointer; list-style: none; display: flex; justify-content: space-between; align-items: center;">
                                    <span><%= faq.question %></span>
                                    <i class="fas fa-chevron-down" style="transition: transform 0.3s ease; font-size: 0.875rem;"></i>
                                </summary>
                                <p style="margin: 1rem 0 0 0; color: var(--text-secondary); line-height: 1.6;">
                                    <%- faq.answer %>
                                </p>
                            </details>
                        <% }); %>
                    <% } else { %>
                        <p style="text-align: center; color: var(--text-muted); padding: 2rem;">No FAQs available</p>
                    <% } %>
                </div>
            </div>
            
            <div class="card" style="margin-top: 2rem; background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(168, 85, 247, 0.1));">
                <h3><i class="fas fa-headset"></i> Need Help?</h3>
                <p style="color: var(--text-secondary); margin-bottom: 1.5rem;">
                    Tim support kami siap membantu Anda menyelesaikan masalah dan menjawab pertanyaan Anda.
                </p>
                
                <div style="display: flex; gap: 1rem;">
                    <% if (settings.store_whatsapp) { %>
                        <a href="https://wa.me/<%= settings.store_whatsapp %>" target="_blank" class="btn btn-success" style="flex: 1;">
                            <i class="fab fa-whatsapp"></i>
                            Chat WhatsApp
                        </a>
                    <% } %>
                    
                    <% if (settings.store_telegram) { %>
                        <a href="https://t.me/<%= settings.store_telegram.replace('@', '') %>" target="_blank" class="btn btn-primary" style="flex: 1;">
                            <i class="fab fa-telegram"></i>
                            Chat Telegram
                        </a>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Additional Info -->
    <div class="card" style="margin-top: 3rem; text-align: center; background: var(--bg-tertiary);">
        <h3><i class="fas fa-shield-check"></i> Kenapa Memilih Kami?</h3>
        
        <div class="grid grid-3" style="margin-top: 2rem;">
            <div>
                <div style="font-size: 2.5rem; color: var(--success); margin-bottom: 0.5rem;">
                    <i class="fas fa-lock"></i>
                </div>
                <h4>100% Aman</h4>
                <p style="color: var(--text-muted); font-size: 0.875rem;">Transaksi terenkripsi & data terlindungi</p>
            </div>
            
            <div>
                <div style="font-size: 2.5rem; color: var(--warning); margin-bottom: 0.5rem;">
                    <i class="fas fa-bolt"></i>
                </div>
                <h4>Proses Cepat</h4>
                <p style="color: var(--text-muted); font-size: 0.875rem;">Delivery instant untuk produk digital</p>
            </div>
            
            <div>
                <div style="font-size: 2.5rem; color: var(--info); margin-bottom: 0.5rem;">
                    <i class="fas fa-headset"></i>
                </div>
                <h4>Support 24/7</h4>
                <p style="color: var(--text-muted); font-size: 0.875rem;">Tim support siap membantu kapan saja</p>
            </div>
        </div>
    </div>
</div>

<style>
    details.faq-item summary {
        list-style: none;
    }
    
    details.faq-item summary::-webkit-details-marker {
        display: none;
    }
    
    details.faq-item[open] summary i {
        transform: rotate(180deg);
    }
    
    details.faq-item {
        transition: all 0.3s ease;
    }
    
    details.faq-item:hover {
        background: var(--bg-hover) !important;
    }
</style>

<script>
// FAQ Toggle functionality
document.addEventListener('DOMContentLoaded', function() {
    const faqItems = document.querySelectorAll('.faq-item');
    
    faqItems.forEach(item => {
        const summary = item.querySelector('summary');
        const icon = summary.querySelector('i');
        
        item.addEventListener('toggle', function() {
            if (this.open) {
                icon.style.transform = 'rotate(180deg)';
            } else {
                icon.style.transform = 'rotate(0deg)';
            }
        });
    });
});
</script>

<%- include('partials/footer') %>
